generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(cuid())
  email String @unique
  name String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscriptions[]
  
  @@map("users")
}

model Todo {
  id String @id @default(cuid())
  title String
  isDone Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("todos")
}

model Feature {
  id String @id @default(cuid())
  key String @unique
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plan_features Plan_Features[]

  @@map("features")
}

model Plan {
  id String @id @default(cuid())
  name String
  price BigInt
  billingInterval String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plan_features Plan_Features[]
  subscriptions Subscriptions[]

  @@map("plans")
}

model Plan_Features {
  id String @id @default(cuid())
  planId String
  plan Plan @relation(fields: [planId], references: [id])
  featureId String
  feature Feature @relation(fields: [featureId], references: [id], onDelete: Restrict, onUpdate: Restrict)


  @@map("plan_features")
}

enum SubscriptionStatus {
  active
  pending
  cancel
}

model Subscriptions {
  id String @id @default(cuid())
  price BigInt
  userId String 
  user User? @relation(references: [id], fields: [userId], onDelete: NoAction, onUpdate: NoAction)
  planId String
  plan Plan @relation(references: [id], fields: [planId], onDelete: NoAction, onUpdate: NoAction)
  status  SubscriptionStatus @default(pending)
  startAt DateTime?
  endAt DateTime? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payments[]

  @@map("subscriptions")
}

model Payments {
  id String @id @default(cuid())
  amount BigInt
  status String 
  paymentType String
  subscriptionId String
  subscription Subscriptions @relation(references: [id], fields: [subscriptionId],onDelete: NoAction, onUpdate: NoAction)
  payedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("payments")
}
