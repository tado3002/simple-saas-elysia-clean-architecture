generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(cuid())
  email String @unique
  name String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Todo {
  id String @id @default(cuid())
  title String
  isDone Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("todos")
}

model Feature {
  id String @id @default(cuid())
  key String @unique
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plan_features Plan_Features[]

  @@map("features")
}

model Plan {
  id String @id @default(cuid())
  name String
  price BigInt
  billingInterval String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plan_features Plan_Features[]

  @@map("plans")
}

model Plan_Features {
  id String @id @default(cuid())
  planId String
  plan Plan @relation(fields: [planId], references: [id])
  featureId String
  feature Feature @relation(fields: [featureId], references: [id], onDelete: Restrict, onUpdate: Restrict)


  @@map("plan_features")
}

